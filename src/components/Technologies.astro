---
import astroImg from "./../assets/astro.svg";
import reactImg from "./../assets/React.svg";
import pythonImg from "./../assets/Python.svg";
import TechnolgyCard from "./TechnolgyCard.astro";

const cards = [
    {
        name: "Astro",
        icon: astroImg,
        description: "Build fast, content-focused websites.",
    },
    {
        name: "React",
        icon: reactImg,
        description:
            "Craft dynamic UIs and web magic with React's component-based sorcery.",
    },
    {
        name: "Python",
        icon: pythonImg,
        description:
            "From dynamic UIs to AI-powered web magic, I craft flexible solutions.",
    },
];
---

<div
    id="technologies"
    class="bg-linear-45 from-gray-900 to-zinc-950 w-full h-300 md:h-160 flex flex-col gap-y-16 place-content-center-safe"
>
    <div class="mx-auto">
        <h2 class="text-white font-code">Technologies I use</h2>
    </div>
    <div
        class="flex flex-col md:flex-row gap-20 place-content-center-safe mx-auto"
    >
        {
            cards.map((card) => (
                <TechnolgyCard
                    icon={card.icon}
                    name={card.name}
                    description={card.description}
                />
            ))
        }
    </div>
</div>
