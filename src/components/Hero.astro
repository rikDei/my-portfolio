---
const h1_text = "I'm Riccardo Deidda";
const lastname = "Software Engineer, AI & Web Developer";
const image_url = "https://images.pexels.com/photos/234527/pexels-photo-234527.jpeg";
---

<div class="relative shadow-xl">
    <img class="w-full" src={image_url} alt="background" />
    <div class="h-full w-full absolute top-0 left-0 flex flex-col justify-center items-center">
        <div class="flex flex-col items-center">
            <h1 class="text-6xl text-white tracking-widest font-light">{h1_text}</h1>
            <p class="text-2xl text-white tracking-wide font-thin">{lastname}</p>
        </div>
    </div>
</div>
